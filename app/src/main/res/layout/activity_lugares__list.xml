<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/relative_inferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorBlanco"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagen1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/ic_lugares" />

        <ImageView
            android:id="@+id/imagen2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="60dp"
            android:layout_toRightOf="@id/imagen1"
            android:src="@drawable/ic_productos" />

        <ImageView
            android:id="@+id/imagen3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="60dp"
            android:layout_toRightOf="@id/imagen2"
            android:src="@drawable/ic_servicios" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewImage"/>
</LinearLayout>

